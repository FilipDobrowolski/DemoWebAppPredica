@model IEnumerable<DemoAppPredica.Models.Models.Journeys.Journey>

@{
    ViewBag.Title = "To Do List";
}

<h3>Database journeys List</h3>


<table class="table table-bordered table-striped">
    <tr>
        <th>Item Name</th>
    </tr>
    @foreach (var journey in Model)
    {
    <tr>
        <td>@journey.DestinationCountry</td>
        <td>@journey.Cost</td>
        <td>@journey.Name</td>
        <td>
        @Html.ActionLink("Edit", "Edit", new { journeyId=@journey.Id })
        </td>
    </tr>
    }
</table>

@if (ViewBag.ErrorMessage == "AuthorizationRequired")
{
    <p>You have to sign-in to see your to do list. Click @Html.ActionLink("here", "Index", "Journeys", new { reauth = true }, null) to sign-in.</p>
}

@if (ViewBag.ErrorMessage == "UnexpectedError")
{
    <p>An unexpected error occurred while retrieving your to do list.  Please try again.  You may need to sign-in.</p>
}
